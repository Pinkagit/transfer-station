@require '~rider'
// 基础配置信息
$-base-font-size = 108
$-bg-color = #f5f5f5
$-main-color = #fc8700
$-grey-color-1 = #333
$-grey-color-2 = #666
$-grey-color-3 = #999


// 设置背景图片
mbg($src, $size = 100% 100%, $position = 0 0, $repeat = no-repeat)

  if not file-exists($src)
    error('$src 必须为本地已存在的图片路径：' + $src)

  background-image: url($src)
  background-size: $size
  background-position: $position
  background-repeat: $repeat
